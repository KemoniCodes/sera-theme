<footer>
    <div class="section">
        <div class="containy">
            <div class="row-1" >
                <h2>
                    {{section.settings.title}}
                </h2>
                <form id="contact-form" method="post" action="" role="form">  
                    <div class="form-group">
                      <input type="email" placeholder="Your email    â†’" class="form-control email" name="email" id="email">
                    </div>
                    <div>
                      <input type="submit" id="contact-submit" class="btn btn-transparent" value="Submit" style="display: none">
                    </div>
                </form>            
            </div>

            <h2>{{section.settings.footer-quote}}</h2>
           
            <div class="row-2">
                <ul>
                    {% for link in linklists[section.settings.footer_linklist].links %}
                            <li>
                                {{link.title}}

                                {% for childlink in link.links %}
                                    <a href="{{childlink.url}}">
                                        <div class="dropdown-header">{{childlink.title}}</div>
                                    </a>
                                {% endfor %}
                            </li>
                    {% endfor %} 
                </ul>   
            </div>
        </div>
    </div>
</footer>

{% schema %}
{
    "name": "Footer Menu",
    "settings": [
        {
            "type": "text",
            "id": "footer-quote",
            "label": "Footer Quote",
            "default": "value",
            "info": "text",
            "placeholder": "text"
        },
        {
            "type": "textarea",
            "id": "title",
            "label": "Title",
            "default": "value",
            "info": "text",
            "placeholder": "text"
        },
        {
            "type": "link_list",
            "id": "footer_linklist",
            "label": "Menu",
            "default": "footer"
        }             
    ]
}
{% endschema %}